<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue">

    <TextView
        android:id="@+id/classNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#4A148C"
        android:gravity="center"
        android:background="@drawable/textviewbox_blue"
        android:fontFamily="@font/eagle_lake"
        android:paddingVertical="12dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/classDescriptionTextView"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#F0F8FF"
        android:textColor="#191970"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        app:backgroundTint="@null"
        app:rippleColor="@android:color/transparent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:padding="12dp"
        android:backgroundTint="#FFFFFF">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewMaterialsStu"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="View Materials"
                android:background="@drawable/buttonbox_blue"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/eagle_lake"
                android:backgroundTint="@null"
                android:textSize="20sp"
                app:backgroundTint="@null"
                app:rippleColor="@android:color/transparent"
            />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDiscussionStu"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Discussion Forum"
                android:background="@drawable/buttonbox_blue"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/eagle_lake"
                android:textSize="20sp"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                app:rippleColor="@android:color/transparent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAssignmentsStu"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:text="Assignments"
                android:background="@drawable/buttonbox_blue"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/eagle_lake"
                android:textSize="20sp"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                app:rippleColor="@android:color/transparent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnbookmark"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_columnWeight="1"
                android:text="Bookmarks"
                android:background="@drawable/buttonbox_blue"
                android:textColor="@android:color/white"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/eagle_lake"
                android:textSize="20sp"
                android:backgroundTint="@null"
                app:backgroundTint="@null"
                app:rippleColor="@android:color/transparent"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

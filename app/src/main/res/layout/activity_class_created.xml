<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue">

    <TextView
        android:text="Class CreatedðŸŽ‰"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#191970"
        android:fontFamily="@font/eagle_lake"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Your Class ID"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/eagle_lake"
        android:textColor="#191970"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvClassId"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:background="@drawable/buttonbox_blue"
        android:textColor="@android:color/white"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <Button
        android:id="@+id/btnCopy"
        android:text="Copy Class ID"
        android:layout_marginBottom="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:background="@drawable/buttonbox_blue"
        android:backgroundTint="@null"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:backgroundTint="@null"
        app:rippleColor="@android:color/transparent"
        android:textColor="@android:color/white"
        />

    <Button
        android:id="@+id/btnDone"
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:background="@drawable/buttonbox_blue"
        android:backgroundTint="@null"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:backgroundTint="@null"
        app:rippleColor="@android:color/transparent"
        android:textColor="@android:color/white"
        />
</LinearLayout>

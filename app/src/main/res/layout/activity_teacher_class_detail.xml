<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mid_vio">

    <TextView
        android:id="@+id/classNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class Name"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#4A148C"
        android:gravity="center"
        android:background="@drawable/textviewbox"
        android:fontFamily="@font/eagle_lake"
        android:paddingVertical="12dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/classDescriptionTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Class description will be shown here."
        android:textSize="16sp"
        android:padding="12dp"
        android:background="#EDE7F6"
        android:textColor="#4A148C"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        android:padding="12dp"
        android:backgroundTint="#FFFFFF">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true">

            <Button
                android:id="@+id/btnviewMaterials"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="View Materials"
                android:background="@drawable/buttonbox"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/eagle_lake"
                android:textSize="15sp"
                app:backgroundTint="@null"
                app:rippleColor="@android:color/transparent"
                />


            <Button
                android:id="@+id/btnviewStudents"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="View Students"
                android:background="@drawable/buttonbox"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/eagle_lake"
                android:textSize="15sp"
                app:backgroundTint="@null"
                app:rippleColor="@android:color/transparent"/>

            <Button
                android:id="@+id/discussion"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Discussion Forum"
                android:background="@drawable/buttonbox"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/eagle_lake"
                android:textSize="15sp"
                app:backgroundTint="@null"
                app:rippleColor="@android:color/transparent"/>

            <Button
                android:id="@+id/btnAssignments"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Assignments"
                android:background="@drawable/buttonbox"
                android:textColor="#FFFFFF"
                android:padding="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/eagle_lake"
                android:textSize="15sp"
                app:backgroundTint="@null"
                app:rippleColor="@android:color/transparent"/>

        </GridLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

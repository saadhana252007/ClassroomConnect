<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/white_border_edittext"
            android:layout_marginBottom="20dp"
            android:text="Create New Class"
            android:gravity="center"
            android:textColor="#191970"
            android:fontFamily="@font/eagle_lake"
            android:textStyle="bold"
            android:textSize="32sp"

            />


        <EditText
            android:id="@+id/etClassName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Class Name"
            android:textColor="#191970"
            android:background="@drawable/white_border_edittext"
            android:padding="14dp"
            android:layout_marginBottom="16dp"
            android:textColorHint="#191970"
            />

        <EditText
            android:id="@+id/etSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:textColor="#191970"
            android:background="@drawable/white_border_edittext"
            android:padding="14dp"
            android:layout_marginBottom="16dp"
            android:textColorHint="#191970"/>

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Class Description"
            android:gravity="top"
            android:textColor="#191970"
            android:background="@drawable/white_border_edittext"
            android:padding="14dp"
            android:layout_marginBottom="30dp"
            android:textColorHint="#191970"/>

        <Button
            android:id="@+id/btnCreateClass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="CREATE  CLASS"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:background="@drawable/buttonbox_blue"
            android:stateListAnimator="@null"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:backgroundTint="@null"
            app:rippleColor="@android:color/transparent"
            android:textColorHint="#4A148C"
            android:fontFamily="@font/eagle_lake" />

    </LinearLayout>
</ScrollView>

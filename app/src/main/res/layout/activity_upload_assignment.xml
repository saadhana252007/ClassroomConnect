<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/light_blue">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:text="Upload Asssignment"
        android:fontFamily="@font/eagle_lake"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#191970"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/white_border_edittext"/>


    <Button
        android:id="@+id/btnselectassign"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Assignment"
        android:background="@drawable/buttonbox_blue"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="17dp"
        app:backgroundTint="@null"
        app:rippleColor="@android:color/transparent"
        android:textSize="20sp"
        android:fontFamily="@font/eagle_lake"/>

    <TextView
        android:id="@+id/fileNameText"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="No file selected"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:textColor="#191970"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnuploadassign"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:text="Upload Assignment"
        android:background="@drawable/buttonbox_blue"
        app:backgroundTint="@null"
        app:rippleColor="@android:color/transparent"
        android:textSize="17sp"
        android:fontFamily="@font/eagle_lake"/>

    <EditText
        android:id="@+id/etAssignmentname"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:backgroundTint="@null"
        app:rippleColor="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Assignment Name"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/textviewbox_blue"
        android:textColor="#191970"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#191970"
        />

    <ProgressBar
        android:id="@+id/uploadProgress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="0"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>
</LinearLayout>
